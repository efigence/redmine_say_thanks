<% content_for :header_tags do %>
  <%= stylesheet_link_tag 'thanks.css', :plugin => 'redmine_say_thanks' %>
  <%= javascript_include_tag 'selectize.min.js',    :plugin => 'redmine_accounting' %>
  <%= stylesheet_link_tag 'selectize.default.css',  :plugin => 'redmine_accounting' %>
<% end %>

<%= render 'shared/nav' %>

<% if  User.current.can_give_thanks? %>


  <%= form_for @new_thanks, url: thanks_path do |f| %>

    <fieldset class="box settings" style="max-width:30%">
      <legend><strong><%= t('thanks.thank_someone') %></strong></legend>
      <p>
        <%= f.label :receiver_id, t('thanks.choose_user') %>
        <%= f.select :receiver_id, options_from_collection_for_select(User.thankable, 'id', 'to_s'), {}, :class => 'selectize', :autofocus => false %>
      </p>
      <%= f.submit 'Submit' %>
    </fieldset>

  <% end %>

<% else %>
  <div class="flash error" id="flash_error"><%= t('thanks.come_back', date: User.current.pretty_next_thanks_date) %></div>
<% end %>
<%= javascript_tag do %>
$(function(){
  var $select = $('.selectize').selectize();
  var selectize = $select[0].selectize;
  selectize.close();
})
<% end %>

