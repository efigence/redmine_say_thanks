<h2>Say thanks!</h2>

<%= form_for @new_thanks, url: thanks_path do |f| %>
  <%= f.label 'receiver_id', 'Choose user' %>
  <%= f.select "receiver_id", options_from_collection_for_select(User.thankable, 'id', 'to_s'), :class => 'selectize', :id => "receiver_id" %>
  <%= f.submit 'Say Thanks' %>
<% end %>

<%= javascript_tag do %>
  $('.selectize').selectize();
<% end %>
